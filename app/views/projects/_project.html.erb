<div id="<%= dom_id project %>">
  <p>
    <strong>Title:</strong>
    <%= project.title %>
  </p>

  <br/>

  <% if project.image.content_type.in?(%w[image/jpeg image/png])%>
    <%= link_to image_tag(project.image_as_thumbnail), project.image if project.image.attached? %>
    <hr />
  <% end %>

  <%= project.body %>

</div>
