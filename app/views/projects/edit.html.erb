<h1>Editing project</h1>

<%# render "form", project: @project %>

<%= form_with(model: @project, id: "rsvp") do |form| %>
  <% if @project.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
      <ul>
        <% @project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Project Title", class: "form-label", style: "display: block; font-size: 1.5em;" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>  <br/>

  <div>
    <%= form.label "Tags", style: "display: block; font-size: 1.5em;" %>
    <%= form.text_field :tags_to_use, value: @current_tags %>
  </div> <br/>

  <div>
    <%= form.label "Cover Image", style: "display: block; font-size: 1.5em;", class: "form-label" %>
    <%= form.file_field :image, class: "form-control" %>
  </div> <br/>

  <div>
    <%= form.label :use_link, style: "display: block; font-size: 1.5em;", class: "form-label" %>
    <%= form.check_box :use_link, id: "use_link_checkbox", class: "form-check" %>
  </div> <br/>

  <div id="turn_on_form_link_box">
    <%= form.label :page, style: "display: block; font-size: 1.5em;", class: "form-label" %>
    <%= form.text_field :page, class: "form-control" %>
  </div>

  <div id="turn_off_form_checkbox">
    <div>
      <%= form.label :body, style: "display: block; font-size: 1.5em;", class: "form-label" %>
      <%= form.rich_text_area :body, class: "form-control" %>
    </div>
  </div> <br/> <br/>

  <div>
    <%= form.submit "Update Project", style: "form-control" %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Show this project", @project %> |
  <%= link_to "Back to manager", projects_path %>
</div>
