<h1>Editing project</h1>

<%# render "form", project: @project %>
<p> Manage Projects </p>
<table class="table table-bordered table-stripped table-dark border-secondary table-sm" style="text-align: center">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th colspan="1"></th>
    </tr>
  </thead>
  <tbody class="table-group-divider">
    <% @project.project_tags.sort_by{|entry| [entry.tag.name] }.each_with_index do |entry, index| %>
    <tr style="vertical-align: middle;">
      <th scope="row"> <%= index %> </th>
      <td> <%= entry.tag.name %> </td>
      <td class="d-flex"> 
        <% if entry.hidden %>
          <%= button_to "Show", toggle_tag_on_project_path(id: entry), class: "btn btn-danger", style: "margin-right:15px", method: :patch %>
        <% else %>
          <%= button_to "Hide", toggle_tag_on_project_path(id: entry), class: "btn btn-primary", style: "margin-right:15px", method: :patch %>
        <% end %>      
      </td>      
    </tr>
    <% end %>
  </tbody>
</table>

<%= form_with(model: @project, id: "rsvp") do |form| %>
  <% if @project.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
      <ul>
        <% @project.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Project Title", class: "form-label", style: "display: block; font-size: 1.5em;" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>  <br/>

  <div>
    <%= form.label "Description", class: "form-label", style: "display: block; font-size: 1.5em;" %>
    <%= form.text_field :description, class: "form-control" %>
  </div>  <br/>

  <div>
    <%= form.label "Tags", style: "display: block; font-size: 1.5em;", class: "form-label" %>
    <%= form.text_field :tags_to_use, value: @current_tags, class: "form-control"  %>
  </div> <br/>

  <div>
    <%= form.label "Cover Image", style: "display: block; font-size: 1.5em;", class: "form-label" %>
    <%= form.file_field :image, class: "form-control" %>
  </div> 
  <div class="field">
    <%= form.label :remove_image %>
    <%= form.check_box :remove_image %>
  </div>
  <br/>
    <div class="field">
    <%= form.label :started, style: "display: block; font-size: 1.5em;" %>
    <%= form.date_field :started,  class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :completed, style: "display: block; font-size: 1.5em;" %>
    <%= form.date_field :completed,  class: "form-control" %>
  </div>
  <div>
    <%= form.label :irrelevant, style: "display: block; font-size: 1.5em;", class: "form-label" %>
    <%= form.check_box :irrelevant, class: "form-check" %>
  </div> <br/>
  <div>
    <%= form.label :featured, style: "display: block; font-size: 1.5em;", class: "form-label" %>
    <%= form.check_box :featured, class: "form-check" %>
  </div> <br/>
  <div>
    <%= form.label :is_completed, style: "display: block; font-size: 1.5em;", class: "form-label" %>
    <%= form.check_box :is_completed, class: "form-check" %>
  </div> <br/>

  <div>
    <%= form.label "Github", class: "form-label", style: "display: block; font-size: 1.5em;" %>
    <%= form.text_field :github, class: "form-control" %>
  </div>  <br/>

  <div class="field">
    <%= form.label :teamsize, style: "display: block; font-size: 1.5em;" %>
    <%= form.number_field :teamsize,  class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :time_taken, style: "display: block; font-size: 1.5em;" %>
    <%= form.number_field :time_taken,  class: "form-control" %>
  </div>

  <div class="field">
    <%= form.label :work_taken, style: "display: block; font-size: 1.5em;" %>
    <%= form.number_field :work_taken,  class: "form-control" %>
  </div>

  <div>
    <%= form.label :use_link, style: "display: block; font-size: 1.5em;", class: "form-label" %>
    <%= form.check_box :use_link, id: "use_link_checkbox", class: "form-check" %>
  </div> <br/>

  <div id="turn_on_form_link_box">
    <%= form.label :page, style: "display: block; font-size: 1.5em;", class: "form-label" %>
    <%= form.text_field :page, class: "form-control" %>
  </div>

  <br/>

  <div id="turn_off_form_checkbox">
    <div>
      <%= form.label :body, style: "display: block; font-size: 1.5em;", class: "form-label" %>
      <%= form.rich_text_area :body, class: "form-control" %>
    </div>
  </div> <br/> <br/>

  <div>
    <%= form.submit "Update Project", style: "form-control" %>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Show this project", @project %> |
  <%= link_to "Back to manager", projects_path %>
</div>
