        <%= image_tag asset_path("gmail.png"), style: "width: 50px; height: 50px;" %>
      </a>
      <a href="https://www.youtube.com/@devtony6421" class="text-light">
        <%= image_tag asset_path("youtube.png"), style: "width: 50px; height: 50px;" %>
      </a>
