<div id="<%= dom_id pin %>">
  <p>
    <strong>Title:</strong>
    <%= pin.title %>
  </p>

  <br/>

  <% if pin.image.content_type.in?(%w[image/jpeg image/png])%>
    <%= link_to image_tag(pin.image_as_thumbnail), pin.image if pin.image.attached? %>
    <hr />
  <% end %>

  <%= pin.body %>

</div>
