<h1>Tony's Project Portfolio!</h1>

<%# Flex Container. Children have class 'p-2' %>
<div class="d-flex flex-row mb-3">

  <% @pins.each do |pin| %>
    <div class="p-2">
      <div class="card" style="width: 18rem; border: 2px solid gray;">
        <% if pin.image.content_type.in?(%w[image/jpeg image/png])%>
          <%= link_to image_tag(pin.image_as_limit(200,200), class: "card-img-top", style: "width: 100%; height: ;"), pin.image if pin.image.attached? %>
          <hr />
        <% end %>
        <div class="card-body">
          <h5 class="card-title"> <%= pin.title %> </h5>
          <p class="card-text"> project description. </p>
          <%= link_to "View Project", pin, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>

</div>
